    var outletlistHeight;
    $("#expcolbtn").click(function () {

        if ($(this).val() === "+")
         {
             $(this).val("-");
             $("#outletlist").css("visibility", "visible");
             $("#outletlist").css("height", outletlistHeight);
         }
         else
         if ($(this).val() === "-") {
             $(this).val("+");
             outletlistHeight = $("#outletlist").height();
             $("#outletlist").css("visibility", "hidden");
